doctype html
html(lang="en")
    head
        include ./head.jade
    body
        div.container
            div.row
                div.col-md-4.col-md-offset-4
                    div.login-panel.panel.panel-default
                        div.panel-heading
                            h3.panel-title 登陆
                        div.panel-body
                            form(role="form")
                                fieldset
                                    div.form-group
                                        input.form-control(placeholder="电子邮箱",
name="email", type="email", autofocus)
                                    div.form-group
                                        input.form-control(placeholder="密码",
name="password", type="password")
                                    div.checkbox
                                        label
                                            input(name="remember", type="checkbox", value="Remember me")
                                            | 记住我
                                    button.btn.btn-lg.btn-success.btn-block 登录
                        div.panel-footer                
                            a.pull-right(href="#") 忘记密码
                            a(href="#") 注册
                            
        include ./script.jade
